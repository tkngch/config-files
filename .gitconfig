[user]
    name = Takao Noguchi
    email = tkngch@runbox.com
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    conflictstyle = diff3
    tool = vimdiff
[core]
    editor = vim
[credential]
    # Number of seconds to cache credentials
    helper = cache --timeout=360000
